<div class="col-md-3 col-sm-3">
    <div class="panel panel-default text-center">
        <div class="panel-heading">
            <span class="fa-stack fa-5x">
                  <i class="fa fa-circle fa-stack-2x text-primary"></i>
                  <i class="fa <%= font_awesome_from_category(spot.category) %> fa-stack-1x fa-inverse"></i>
            </span>
        </div>
        <div class="panel-body">
            <h4><%= spot.name %></h4>
            <p><%= truncate(spot.description,length: 60) %></p>
            <ul class="button_ops">
              <% if spot.approved %>
                <li><%= link_to "Order Now", order_spot_path(spot), class: "btn btn-primary", method: "post" %></li>
              <% end %>
              <li><%= link_to "Modify this spot", edit_spot_path(spot), class: "btn btn-primary" %></li>
              <li><%= link_to "Remove this spot", spot_path(spot), { class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } } %></li>
            </ul>
        </div>
    </div>
</div>
