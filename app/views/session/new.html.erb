<%= render 'pages/header' %>

<div class="login_buttons">
  <%= link_to auth_path(provider: 'facebook'), :class => "btn btn-social btn-facebook" do %>
      <span class="fa fa-facebook icon-4x"></span>
      Sign in with Facebook
  <% end %>

  <%= link_to auth_path(provider: 'amazon'), :class => "btn btn-social btn-amazon" do %>
      <span class="fa fa-amazon fa-2x"></span>
      Sign in with Amazon
  <% end %>

  <%= link_to auth_path(provider: 'github'), :class => "btn btn-social btn-github" do %>
      <span class="fa fa-github fa-2x"></span>
      Sign in with Github
  <% end %>
</div>
